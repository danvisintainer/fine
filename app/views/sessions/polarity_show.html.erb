<center><h1><%= @word %> tweets</h2>

<div id="table_container">
  <table id="list-table" class="table table-striped table-hover ">
    <thead>
      <td>user</td>
      <td>tweet</td>
    </thead>
    <% @tweets.each do |t| %>
    <tr>
      <td><h4><%= t.user %></td>
      <td><h4><a href="<%= t.uri %>"><%= t.text %></a></td>
    </tr>
    <% end -%>
  </table>
</div>