<%= include_gon %>
<%= @tweets %>

<script src="http://d3js.org/d3.v3.min.js"></script>
<script src="/d3.layout.cloud.js"></script>

<style type="text/css">    
#cloud{
width: 100%;
height:100%;
}
</style>

<center>
  <h2>
    <% if @days_count == 0 %>
      Twitter's feelings from this past day
    <% else %>
      Twitter's feelings from the past <%= @days_count %> days
    <% end %>
  </h2>
</center>

<div id="d3Cloud">
</div>


<center>
  <%= form_tag("/cloud/") do %> 
  Show me the results of the past <%= text_field_tag 'days_count', '', size: 3, maxlength: 3 %> days
  <%= submit_tag "Go" %>
  <% end %>
</center>

<div id="polarity">
  <% if @positive_count > @negative_count %>
    <h2>So far, people are feeling positive today!</h2>
  <% elsif @positive_count < @negative_count %>
    <h2>So far, people are feeling negative today...</h2>
  <% else %>
    <h2>People are equally positive AND negative today. Wait, what?</h2>
  <% end %>
</div>

