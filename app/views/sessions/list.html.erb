<center>
  <h2>
    <% if @days_count == 0 %>
      twitter's feelings from <b>this past day</b>
    <% else %>
      twitter's feelings from <b>the past <%= @days_count %> days</b>
    <% end %>
  </h2>
</center>

<center>
  <%= form_tag("/list/") do %> 
  show me the results of the past <%= text_field_tag 'days_count', '', size: 3, maxlength: 3 %> days
  <%= submit_tag "go", class: 'btn btn-default btn-sm' %>
  <% end %>
</center>

<div id="table_container">
  <table id="list-table" class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>feeling</th>
        <th>count</th>
      </tr>
    </thead>
    <% @tweets.each do |t| %>
      <tr>
        <td><h4><%= link_to t.first, "/word/#{t.first}" %></td>
        <td><h4><%= t.last %></td>
      </tr>
    <% end -%>
  </table>
</div>